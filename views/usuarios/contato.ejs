<!-- Cabeçalho -->
<%- include('../partials/usuario-header', { title: 'Contato' }) %>

<body>

    <%- include('../partials/msg') %>

    <div class="contato">

        <!-- Navbar -->
        <%- include('../partials/usuario-navbar') %>

        <!-- começo formulario contato -->
        <div class="testetudo">
            <div class="esquedaform">
                <div class="contato">
                    <form action="/formContato" method="post" id="formContato">
                        <div class="contact">
                            <h3>Fale conosco</h3>
                        </div>
                        <div class="nome">
                            <label for="nome">Nome: <br></label>
                            <input type="text" id="nome" name="nome" placeholder="Nome completo" required>
                        </div>
                        <div class="email">
                            <label for="email">Email:<br></label>
                            <input type="email" id="email" name="email" placeholder="Endereço de email" required>
                        </div>
                        <div class="foneform">
                            <label for="fone">Telefone:<br></label>
                            <!-- <input type="tel" id="fone" name="telefone" placeholder="Telefone para contato" required> -->
                            <input type="tel" id="telefone" name="telefone" placeholder="(__) _____-____" maxlength="14" oninput="formatarTelefone(this)" required> 
                        </div>
                        <div class="nome">
                            <label for="msg">Mensagem:<br></label>
                            <textarea id="msg" name="mensagem" placeholder="Digite sua mensagem" required></textarea>
                        </div>
                        <div class="enviar">
                            <button type="submit">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- começo informações de contato da empresa -->
            <div class="direitaform">
                <h2>Nossos contatos</h2>
                <div class="todasinfo">
                    <!-- fone -->
                    <div class="info-item">
                        <img src="icons/icons8-telefone-50.png" alt="fone" width="25px" height="25px">
                        <h3>(00) 00000-0000</h3>
                    </div>
                    <!-- mail -->
                    <div class="info-item">
                        <img src="icons/icons8-mensagem-30.png" alt="email" width="25px" height="25px">
                        <h3>email@email.com</h3>
                    </div>
                    <!-- whatzap -->
                    <div class="info-item">
                        <img src="icons/icons8-whatsapp-50.png" alt="zap" width="25px" height="25px">
                        <h3>(00) 00000-0000</h3>
                    </div>
                    <!-- horario de funcionamento -->
                    <div class="info-item">
                        <img src="icons/icons8-companhia-50.png" alt="expediente" width="25px" height="25px">
                        <h3>Segunda a Sexta, das 09:00 as 17:00</h3>
                    </div>
                    <!-- localizaçao -->
                    <div class="info-item">
                        <img src="icons/icons8-localização-50.png" alt="localização" width="25px" height="25px">
                        <h3>Rua da avenida, 100 - Brasilândia - São Paulo</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- começo mapa -->
        <div class="map-container">
            <h2>Localização da empresa</h2>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3659.9248835534504!2d-46.71653422467282!3d-23.463173878867558!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94cef97e8252e51b%3A0x3b4da5de82c1ea21!2sETEC%20Paulistano!5e0!3m2!1spt-BR!2sbr!4v1722394449087!5m2!1spt-BR!2sbr" 
                width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        </div>

        <!-- Rodapé -->
        <%- include('../partials/usuario-footer') %>

    </div>
</body>

</html>