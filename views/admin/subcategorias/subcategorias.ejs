<%- include('../../partials/admin-header') %>
<%- include('../../partials/msg') %>
<body class="produtoAdm">
    <!-- Título da página -->

    <div class="geralHomeadm">

        <!-- Navbar lateral -->
        <%- include('../../partials/admin-navbar') %>

        <!-- Conteúdo principal -->
        <section class="area-produtos">
            <% if (subcategorias.length > 0) { %>
                <div class="product-container">
                    <% for(let i = 0; i < subcategorias.length; i++) { %>
                        <div class="product-boxAdm">
                            <img src="<%= subcategorias[i].imagem_subCategoria %>" alt="<%= subcategorias[i].nome_subCategoria %>">
                            <h3><%= subcategorias[i].nome_subCategoria %></h3>
                            <a href="/Admin/SubCategorias/<%= categoria.slug_categoria %>/<%= subcategorias[i].slug_subCategoria %>">
                                <button class="btn-editar">Editar SubCategoria</button>
                            </a>
                            <form action="/Admin/SubCategorias/Deletar" method="POST" id="deletarSubCategoria-form">
                                <input type="hidden" name="id" value="<%= subcategorias[i].id_subCategoria %>">
                                <input type="hidden" name="idCategoria" value="<%= categoria.id_categoria %>">
                                <button type="submit" class="btn-deletar">Deletar SubCategoria</button>
                            </form>
                        </div>
                    <% } %>
                </div>
            <% } else { %>
                <p class="msg-sem-categorias">Nenhuma subcategoria cadastrada</p>
            <% } %>

            <hr>

            <!-- Botão Voltar -->
            <div class="addNovobtn">
                <a href="/Admin/SubCategorias">
                    <button class="btn-adicionar">Voltar</button>
                </a>
            </div>
        </section>
    </div>

    <script src="/js/script.js"></script>
</body>
